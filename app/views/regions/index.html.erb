<p id="notice"><%= notice %></p>

<div align="right">
<%= form_tag(regions_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search regions" %>
<%= submit_tag "Search" %>
<% end %><br/>
</div>

<h1>Listing Regions</h1>

<table class ="table table-striped" id="myTable">
  <thead>
    <tr>
      <th>Cityname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.cityname %></td>
        <td><%= link_to 'Show', region %></td>
        <td><%= link_to 'Edit', edit_region_path(region) %></td>
        <td><%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= link_to 'New Region', new_region_path %><br/>
<br/>


<% if @regions.blank? %>
  <h4>There are no stores in selected region <%= params[:search] %>.</h4>
<% end %>

<br/>
  

<%if !user_signed_in? %>
  <%=link_to 'Login',new_user_session_path%>
<% end %>

<br/>
<br/>